<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.cxh.mvvmsample.listener.OkListener"/>

        <variable
            name="user"
            type="com.cxh.mvvmsample.model.api.entity.User"/>

        <variable
            name="okText"
            type="String"/>

        <variable
            name="viewModel"
            type="com.cxh.mvvmsample.viewmodel.DataBindingViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.firstName}"
            tools:text="user.firstName"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{listener.onClickOk}"
            android:text="@{okText}"
            tools:text="Listener"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{okText}"
            bind:clickCommand="@{viewModel.mReplyCommand}"
            tools:text="Command"/>
    </LinearLayout>
</layout>
