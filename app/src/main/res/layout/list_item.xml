<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.cxh.mvvmsample.model.entity.User"/>

        <variable
            name="listener"
            type="com.cxh.mvvmsample.callback.OnItemClickListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{item.firstName}"
            android:onClick="@{() -> listener.onItemClick(item.firstName)}"
            tools:text="hhhhhhhh"/>
    </LinearLayout>

</layout>