<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.cxh.mvvmsample.viewmodel.XXXViewModel"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(viewModel.mWelcomeEntity.get().getCode())}"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mWelcomeEntity.get().getMsg()}"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mWelcomeEntity.get().getData().toString()}"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    fresco:clickCommand="@{viewModel.mReplyCommand}"
                    android:text="点我"/>

            <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    fresco:placeholderImage="@drawable/meizi"
                    fresco:uri="@{viewModel.path.get()}"/>

        </LinearLayout>

    </ScrollView>

</layout>
